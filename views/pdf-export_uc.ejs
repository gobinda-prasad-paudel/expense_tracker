  <script>
    document.getElementById('pdfForm').addEventListener('submit', async function (e) {
      e.preventDefault(); // prevent normal form submit

      const startDate = document.getElementById('startDate').value;
      const endDate = document.getElementById('endDate').value;
      const tableType = document.getElementById('tableType').value;
      const message = document.getElementById("message");

      if (!startDate || !endDate || !tableType) {
        alert('Please fill all fields');
        return;
      }

      try {
        message.innerText = 'PDF generation request sent. Please wait you will be redirect soon';
        // Send generate request to backend
        const response = await fetch('/user/pdf-generate', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ startDate, endDate, tableType })
        });

        // console.log(startDate, endDate, tableType);


        if (!response.ok) throw new Error('Failed to generate PDF');

        const messageDiv = document.getElementById('message');
        let countdown = 10;

        // Show initial message
        messageDiv.innerText = `PDF generation started. Redirecting in ${countdown} seconds...`;

        // Update countdown every second
        const interval = setInterval(() => {
          countdown--;
          if (countdown > 0) {
            messageDiv.innerText = `Redirecting in ${countdown} seconds...`;
          } else {
            clearInterval(interval);
            window.location.href = '/user/statements';
          }
        }, 1000);

      } catch (err) {
        console.error(err);
        message.innerText = 'Something went wrong. Please try again.';
      }
    });
  </script>

