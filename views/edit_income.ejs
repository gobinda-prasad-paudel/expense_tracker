<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Income - रु‎ Expense Tracker</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .sidebar-active {
      background-color: #e0e7ff;
      color: #3730a3;
    }

    /* Always include .open class behavior */
    #sidebar {
      transition: transform 0.3s ease-in-out;
    }

    #sidebar.open {
      transform: translateX(0);
    }

    /* Custom styles for sidebar transition on mobile/tablet */
    @media (max-width: 767px) {
      #sidebar {
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
      }

      #sidebar.open {
        transform: translateX(0);
      }

      #sidebar-overlay {
        transition: opacity 0.3s ease-in-out;
      }
    }
  </style>
</head>

<body class="bg-gray-100">
  <div class="flex h-screen overflow-hidden">


    <!-- Sidebar -->
    <%- include("./partials/sidebar") %>


      <!-- Main Content -->
      <div id="main-content-wrapper" class="flex-1 overflow-auto ">
        <!-- Header -->
        <header class="bg-white shadow-sm border-b px-6 py-4 flex items-center">
          <button id="sidebar-toggle" class="p-2 rounded-md hover:bg-gray-100 mr-4 md:hidden">
            <i class="fas fa-bars text-gray-700"></i>
          </button>
          <h1 class="text-xl font-bold text-gray-900 sm:text-2xl">Edit Income</h1>
          <div class="flex-grow"></div>
          <a href="/user/dashboard" class="text-gray-600 hover:text-gray-900 text-sm sm:text-2xl">
            <i class="fas fa-arrow-left mr-2"></i>Back to Dashboard
          </a>
        </header>

        <!-- Form Content -->
        <main class="p-6">
          <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow p-8">
              <div class="flex items-center mb-6">
                <div class="p-3 bg-green-100 rounded-lg mr-4">
                  <i class="fas fa-plus-circle text-green-600 text-xl"></i>
                </div>
                <div>
                  <h2 class="text-2xl font-bold text-gray-900">Add New Income</h2>
                  <p class="text-gray-600">Record a new income transaction</p>
                </div>
              </div>

              <form class="space-y-6" action="/user/income/edit/<%= income._id %>" method="POST">
                <div>
                  <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                    Description
                  </label>
                  <input type="text" id="description" name="description" required value="<%= income.description %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                  <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">
                    Amount (रु‎)
                  </label>
                  <input type="number" id="amount" name="amount" step="0.01" required value="<%= income.amount %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div>
                  <label for="source" class="block text-sm font-medium text-gray-700 mb-2">
                    Income Source
                  </label>
                  <select id="source" name="source" required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                    <option value="">Select income source</option>
                    <option <%=income.incomeSource=="Salary" ? "selected" : "" %> value="Salary">Salary</option>
                    <option <%=income.incomeSource=="Freelance" ? "selected" : "" %> value="Freelance">Freelance
                    </option>
                    <option <%=income.incomeSource=="Business" ? "selected" : "" %> value="Business">Business</option>
                    <option <%=income.incomeSource=="Investment" ? "selected" : "" %> value="Investment">Investment
                    </option>
                    <option <%=income.incomeSource=="Rental" ? "selected" : "" %> value="Rental">Rental</option>
                    <option <%=income.incomeSource=="Gift" ? "selected" : "" %> value="Gift">Gift</option>
                    <option <%=income.incomeSource=="Bonus" ? "selected" : "" %> value="Bonus">Bonus</option>
                    <option <%=income.incomeSource=="Other" ? "selected" : "" %> value="Other">Other</option>
                  </select>
                </div>
                <div>
                  <label for="source" class="block text-sm font-medium text-gray-700 mb-2">
                    Recieved Via
                  </label>
                  <% const sources=[ "Cash" , "Bank Transfer" , "Cheque" , "Mobile Banking" , "Digital Wallet"
                    , "E-sewa" , "Khalti-Pay" , "Other" ]; %>

                    <select id="receivedThrough" name="receivedThrough" required
                      class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                      <option value="">Select received source</option>

                      <% sources.forEach(function(source) { %>
                        <option value="<%= source %>" <%=income.receivedThrough===source ? "selected" : "" %>>
                          <%= source %>
                        </option>
                        <% }); %>
                    </select>

                </div>

                <div>
                  <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
                    Date
                  </label>
                  <input type="date" id="date" name="date" required
                    value="<%= income  ? income.date.toISOString().slice(0,10) : "" %>"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                </div>

                <div class="flex space-x-4">
                  <button type="submit"
                    class="flex-1 bg-green-600 hover:bg-green-700 text-white py-2 px-4 rounded-md font-medium">
                    <i class="fas fa-check mr-2"></i>
                    Update Income
                  </button>
                  <a href="/user/income"
                    class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 py-2 px-4 rounded-md font-medium text-center">
                    Cancel
                  </a>
                </div>
              </form>
            </div>
          </div>
        </main>
      </div>
  </div>

  <script>
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    const mainContentWrapper = document.getElementById('main-content-wrapper');

    function toggleSidebar() {
      sidebar.classList.toggle('open');
      sidebar.classList.toggle('-translate-x-full');
      sidebarOverlay.classList.toggle('hidden');
      sidebarOverlay.classList.toggle('opacity-0');
      sidebarOverlay.classList.toggle('opacity-50');
      document.body.classList.toggle('overflow-hidden');
    }

    sidebarToggle.addEventListener('click', toggleSidebar);
    sidebarOverlay.addEventListener('click', toggleSidebar);

    const navLinks = document.querySelectorAll('#sidebar nav a');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth < 768) {
          toggleSidebar();
        }
      });
    });

    function handleResize() {
      if (window.innerWidth >= 768) {
        sidebar.classList.remove('fixed', '-translate-x-full', 'open');
        sidebar.classList.add('relative', 'translate-x-0');
        sidebarOverlay.classList.add('hidden', 'opacity-0');
        document.body.classList.remove('overflow-hidden');
      } else {
        sidebar.classList.add('fixed', '-translate-x-full');
        sidebar.classList.remove('relative', 'translate-x-0');
        if (!sidebar.classList.contains('open')) {
          sidebarOverlay.classList.add('hidden', 'opacity-0');
        }
      }
    }

    handleResize();
    window.addEventListener('resize', handleResize);

    // Set today's date as default
    document.getElementById('date').valueAsDate = new Date();
  </script>
  <%- include("./partials/sidebar_js") %>
</body>

</html>